<mvc:View controllerName="listenanzeige.controller.Listenanzeige"
    xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
    xmlns="sap.m">
    <List
		id="ListID"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Customer',
				descending: false,
				group: true
			},
			groupHeaderFactory: '.getGroupHeader'
		}">
		<headerToolbar>
			<OverflowToolbar>
				<Title
					text="{i18n>title}" />
				<ToolbarSpacer />
				<ToggleButton
					icon="sap-icon://menu"
					tooltip="Enable / Disable Custom Context Menu"
					press="onToggleContextMenu" />
			</OverflowToolbar>
		</headerToolbar>
		<ObjectListItem
			title="{Name}"
			type="Active"
			press="onListItemPress"
			number="{
				parts:[{path:'Price'},{path:'CurrencyCode'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {showMeasure: false}
			}"
			numberUnit="{CurrencyCode}">
			<firstStatus>
				<ObjectStatus
					text="{Status}"
					state="{
						path: 'Status',
						formatter: 'sap.m.sample.ObjectListItem.Formatter.status'
					}" />
			</firstStatus>
			<ObjectAttribute text="{WeightMeasure} {WeightUnit}" />
			<ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />
		</ObjectListItem>
	</List>
</mvc:View>
